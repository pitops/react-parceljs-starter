{
  "name": "react-parcel",
  "version": "0.0.1",
  "description": "ReactJS and ParcelJS starter",
  "main": "index.js",
  "author": "Petros Kyriakou",
  "license": "ISC",
  "keywords": [
    "babel7",
    "ParcelJS",
    "ES2018",
    "ReactJS",
    "React starter"
  ],
  "scripts": {
    "start": "parcel src/index.html",
    "lint": "eslint src/*.js",
    "lint:fix": "eslint src/*.js --fix",
    "serve": "parcel src/index.html --open",
    "build": "npm run clean:build && parcel build src/index.html --public-url './' -d dist",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "clean:build": "rimraf dist",
    "clean:coverage": "rimraf src/tests-reports",
    "coverage": "npm run clean:coverage && jest --coverage"
  },
  "staticPath": [
    "public"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "prettier-standard",
        "jest --bail",
        "git add"
      ]
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "jest-enzyme",
    "testEnvironment": "enzyme",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "coverageDirectory": "src/tests-reports",
    "coverageReporters": [
      "html",
      "text"
    ],
    "roots": [
      "<rootDir>/src"
    ]
  },
  "dependencies": {
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime-corejs2": "^7.1.2",
    "autoprefixer": "^9.3.1",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.26.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-environment-enzyme": "^7.0.0",
    "jest-enzyme": "^7.0.0",
    "lint-staged": "^7.3.0",
    "parcel-bundler": "^1.10.3",
    "parcel-plugin-static-files-copy": "^1.2.4",
    "prettier-standard": "^8.0.1",
    "prop-types": "^15.6.2",
    "react-test-renderer": "^16.6.0",
    "sass": "^1.14.3"
  }
}